@page
@model BulkWebRazor_Temp.Pages.Categories.DeleteModel
<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-1"></label>
            <input asp-for="Category.Name" disabled class="form-control" />

        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-1"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-control" />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="/categories/index"  class="btn-outline-secondary border form-control">Back to List</a>
            </div>
        </div>


    </div>
</form>
